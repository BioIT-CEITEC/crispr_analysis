{
  "workflow_description": {
    "name": "crispr_analysis",
    "version": 1.0,
    "label": "CRISPR analysis",
    "type": "crispr_analysis",
    "inputs": "raw_fastq/{sample}*fastq.gz",
    "outputs": [
      "DE_results/*",
      "preprocessed_data/*",
      "mapped/*",
      "counts/*",
      "logs/*",
      "final_report.html"
    ],
    "report_index": "final_report.html",
    "reports":[
       "final_report.html",
       "counts/all_samples_report.pdf",
       "counts/all_samples_report.tsv",
       "counts/*/*graphs.pdf",
       "mapped/all_samples.stats.tsv",
       "DE_results/*/*/*.graphs.pdf",
       "DE_results/*/*/*summary*"
    ]
  },
  "general_params": [
    "library_name",
    "sample_name",
    "lib_forward_read_length",
    "lib_reverse_read_length"
  ],
  "requested_params": [
    "is_paired"
  ],
  "gui_params": {
    "primary": {
      "reference": {
        "label": "Genomic Reference",
        "type": "enum",
        "default": "GRCh38-p10",
        "list": ##INCLUDE:reference_info/reference.json##
      },
      "crispr_type": {
        "label": "CRISPR type",
        "type": "enum",
        "default": "CRISPR_Brunello",
        "list": {
          "CRISPR_Brunello": "CRISPR_Brunello",
          "CRISPR_GeCKO": "CRISPR_GeCKO",
          "CRISPR_VBC": "CRISPR_VBC"
        }
      },
      "conditions_to_compare": {
        "label": "Conditions to compare",
        "type": "string",
        "default": "all"
      },
      "use_tag_to_pair_samples": {
        "label": "Pair samples by Tag",
        "type": "bool",
        "default": false
      }
    },
    "detailed": {
      "crispr_adapter": {
        "label": "CRISPR adapter",
        "type": "enum",
        "default": "GGAAAGGACGAAACACCG",
        "list": {
          "GGAAAGGACGAAACACCG": "Brunello (GGAAAGGACGAAACACCG)",
          "TTCCAGCATAGCTCTTAAAC": "VBC (TTCCAGCATAGCTCTTAAAC)",
          "UNKNOWN": "GeCKO (UNKNOWN)"
        },
        "conditions": {
          "value": {
            "crispr_type": {
              "CRISPR_Brunello": "GGAAAGGACGAAACACCG",
              "CRISPR_GeCKO": "UNKNOWN",
              "CRISPR_VBC": "TTCCAGCATAGCTCTTAAAC"
            }
          }
        }
      },
      "error_rate": {
        "label": "Allowed error rate of adapters",
        "type": "string",
        "default": "0.2"
      },
      "min_overlap": {
        "label": "Minimal overlap of adapters",
        "type": "int",
        "default": 18
      },
      "min_len": {
        "label": "Discard length of sequences",
        "type": "int",
        "default": 20
      },
      "times": {
        "label": "How many times adapter should be removed",
        "type": "int",
        "default": 1
      },
      "guide_len": {
        "label": "Remaining length of the guide (sgRNA) sequence",
        "type": "int",
        "default": 20
      },
      "top_genes": {
        "label": "How many top genes should be reported individually in final plots",
        "type": "int",
        "default": 10
      }
    },
    "samples": {
      "condition": {
        "label": "Condition",
        "type": "string",
        "default": ""
      },
      "tag": {
        "label": "Tag",
        "type": "string",
        "default": ""
      }
    }
  }
}
